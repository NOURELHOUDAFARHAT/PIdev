{% extends 'basedb.html.twig' %}

{% block title %}Diagramme des Biens par type{% endblock %}

{% block body %}
<div class="table-container content-wrapper" style="margin-left: 300px; padding: 20px; margin-top: 50px;">
    <h1>Diagramme des Biens par type</h1>
    <div id="chartContainer" style="height: 370px; width: 100%;"></div>
</div>

{% block javascript %}
<script src="https://canvasjs.com/assets/script/canvasjs.min.js"></script>
<script>
    window.onload = function () {
        const BiensParType = {{ BiensParType|json_encode|raw }};
        const chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            title: {
                text: "Biens par type"
            },
            data: [{
                type: "pie",
                showInLegend: true,
                legendText: "{labels}",
                toolTipContent: "{labels}: <strong>{y}</strong>",
                dataPoints: [
                    {% for type, count in BiensParType %}
                    { labels: "{{ type }}", y: {{ count }} },
                    {% endfor %}
                ]
            }]
        });
        chart.render();
    }
</script>
{% endblock %}
{% endblock %}