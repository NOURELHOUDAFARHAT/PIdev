<script>
    function generatePDF() {
        // Options de personnalisation du PDF
        const options = {
            filename: 'liste_des_biens.pdf', // Nom du fichier PDF
            image: { type: 'jpeg', quality: 0.98 }, // Qualité de l'image (jpeg)
            html2canvas: { scale: 2 }, // Échelle de conversion HTML en image
            jsPDF: { unit: 'in', format: 'letter', orientation: 'portrait' } // Format du PDF
        };

        // Création d'un élément pour le logo
        const logo = document.createElement('img');
        logo.src = '/public/img/logooo.png'; // Chemin vers votre logo
        logo.style.width = '50px'; // Ajustez la taille du logo selon vos besoins
        logo.style.marginBottom = '20px'; // Ajustez la marge inférieure selon vos besoins

        // Choisissez l'élément où votre contenu sera rendu.
        const element = document.getElementById('dataTable');

        // Création d'un conteneur pour le logo et le contenu de la table
        const container = document.createElement('div');
        container.appendChild(logo);
        container.appendChild(element.cloneNode(true)); // Cloner le contenu de la table

        // Générer le PDF avec les options spécifiées
        html2pdf().set(options).from(container).save();
    }
</script>


