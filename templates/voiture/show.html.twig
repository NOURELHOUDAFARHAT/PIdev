{% extends 'base.html.twig' %}

{% block title %}Voiture{% endblock %}

{% block body %}
    <h1>Voiture</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ voiture.id }}</td>
            </tr>
            <tr>
                <th>NumImmatriculation</th>
                <td>{{ voiture.numImmatriculation }}</td>
            </tr>
            <tr>
                <th>Modele</th>
                <td>{{ voiture.modele }}</td>
            </tr>
            <tr>
                <th>Couleur</th>
                <td>{{ voiture.couleur }}</td>
            </tr>
            <tr>
                <th>Disponible</th>
                <td>{{ voiture.disponible ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PrixPerDay</th>
                <td>{{ voiture.prixPerDay }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_voiture_index') }}">back to list</a>
    <a href="{{ path('app_voiture_edit', {'id': voiture.id}) }}">edit</a>
    {{ include('voiture/_delete_form.html.twig') }}
{% endblock %}
