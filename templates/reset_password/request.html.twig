							{{ form_start(requestForm) }}
							{{ form_row(requestForm.email, {'attr': {'class': 'form-control mb-4'}}) }}
                            						<small>
							Enter your email address, and we will send you a link to reset your password.
						</small>
						</div>
					</div>
					<div>

					</div>
                    <div class="col-md-6">
					<button class="btn btn-primary text-white w-100 py-3">Send password reset email</button>
					{{ form_end(requestForm) }}
                    </div>
				</div>
			</div>
		</div>
	</div>
