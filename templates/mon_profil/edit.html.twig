<!DOCTYPE html
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Welcome!
			
		</title>
        	{% block css %}
			<!-- Google Fonts -->
			<link href="https://fonts.gstatic.com" rel="preconnect">
			<link
			href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
			<!-- Bootstrap CSS -->
			<link
			href="{{ asset('assets/vendor/bootstrap/css/bootstrap.min.css') }}" rel="stylesheet">
			<!-- Bootstrap Icons CSS -->
			<link
			href="{{ asset('assets/vendor/bootstrap-icons/bootstrap-icons.css') }}" rel="stylesheet">
			<!-- Boxicons CSS -->
			<link
			href="{{ asset('assets/vendor/boxicons/css/boxicons.min.css') }}" rel="stylesheet">
			<!-- Quill CSS -->
			<link href="{{ asset('assets/vendor/quill/quill.snow.css') }}" rel="stylesheet">
			<link
			href="{{ asset('assets/vendor/quill/quill.bubble.css') }}" rel="stylesheet">
			<!-- Remixicon CSS -->
			<link
			href="{{ asset('assets/vendor/remixicon/remixicon.css') }}" rel="stylesheet">
			<!-- Simple DataTables CSS -->
			<link
			href="{{ asset('assets/vendor/simple-datatables/style.css') }}" rel="stylesheet">
			<!-- Main CSS -->
			<link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
			<style>
				.center-table {
					margin: 0 auto;
				}
			</style>
		{% endblock %}
        </head>
	<body>
    {{ form_start(form) }}


    <!-- Navbar & Hero Start -->
    <div class="container-fluid position-relative p-0">
        <nav class="navbar navbar-expand-lg navbar-light px-4 px-lg-5 py-3 py-lg-0">
            <a href="" class="navbar-brand p-0">
                <h1 class="m-5">
                    <img src="/img/logo.png" alt="Logo" style="width: 200px; height: auto;">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <div class="navbar-nav ms-auto py-0">
                    <a href="{{ path('app_acceuil') }}" class="nav-item nav-link">Home</a>
                    <a href="about.html" class="nav-item nav-link">Bien</a>
                    <a href="services.html" class="nav-item nav-link">Services</a>
                    <a href="packages.html" class="nav-item nav-link">Reservation</a>
                    <a href="blog.html" class="nav-item nav-link">Activité</a>

                </div>

            </div>
           
        </div>
        </nav>
    </div>
    <!-- Navbar & Hero End -->
   
    <!-- Contact Start -->
    <div class="container-fluid contact bg-light py-5">
        <div class="container py-5">
            <div class="mx-auto text-center mb-5" style="max-width: 900px;">
                <h5 class="section-title px-3">Modifier utilisateur </h5>
                <h1 class="mb-0">Contacter Nous </h1>
            </div>
            <div class="row g-5 align-items-center">
                <div class="col-lg-4">
                    <div class="bg-white rounded p-4">
                        <div class="text-center mb-4">
                            <i class="fa fa-map-marker-alt fa-3x text-primary"></i>
                            <h4 class="text-primary">Address</h4>
                            <p class="mb-0">Ecole Supérieure Privée d'Ingénierie et de Technologies<br>Ariana</p>
                        </div>
                        <div class="text-center mb-4">
                            <i class="fa fa-phone-alt fa-3x text-primary mb-3"></i>
                            <h4 class="text-primary">Mobile</h4>
                            <p class="mb-0">+216 70 250 000</p>
                            <p class="mb-0">+216 29 214 534</p>
                        </div>

                        <div class="text-center">
                            <i class="fa fa-envelope-open fa-3x text-primary mb-3"></i>
                            <h4 class="text-primary">Email</h4>
                            <p class="mb-0">contact@esprit.tn</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8">
                    <h3 class="mb-2">Modifier le formulaire</h3>
                    <form>
                        <div class="col-md-6">
                            <div class="mb-4">
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control mb-4'}}) }}
                                {% if form.nom.vars.errors|length > 0 %}
                                    <div class="error-message">
                                        {{ form_errors(form.nom) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control mb-4'}}) }}
                                {% if form.prenom.vars.errors|length > 0 %}
                                    <div class="error-message">
                                        {{ form_errors(form.prenom) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                {{ form_widget(form.adresse, {'attr': {'class': 'form-control mb-4'}}) }}
                                {% if form.adresse.vars.errors|length > 0 %}
                                    <div class="error-message">
                                        {{ form_errors(form.adresse) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                {{ form_widget(form.sexe, {'attr': {'class': 'form-control mb-4'}}) }}
                                {% if form.sexe.vars.errors|length > 0 %}
                                    <div class="error-message">
                                        {{ form_errors(form.sexe) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                {{ form_widget(form.email, {'attr': {'class': 'form-control mb-4'}}) }}
                                {% if form.email.vars.errors|length > 0 %}
                                    <div class="error-message">
                                        {{ form_errors(form.email) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-4">
                                {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control mb-4'}}) }}
                                {% if form.plainPassword.vars.errors|length > 0 %}
                                    <div class="error-message">
                                        {{ form_errors(form.plainPassword) }}
                                    </div>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-12">
                                    
                                </div>
                               <div class="col-lg-4-12">
    <button class="btn btn-primary rounded-pill py-2 px-4" type="submit">Modifier</button>
</div>

                            </div>
                    </form>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
    </body>
    <!-- Contact End -->
{% endblock %}
